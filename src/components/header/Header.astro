---
import './header.css';
const { origin } = Astro.props;
import Logo from '../Logo.astro';
---

<header class="header">
	<div class="header__container">
		<Logo name="IShreyder" />
		<nav class="links" tabindex="0.1">
			<button class="menu__btn">Menu</button>
			<ul class="header__list">
				{
					origin.map((data) => (
						<li>
							<a class="menu__link" href={data.link}>
								<span class="icon__container">
									<iconify-icon
										class="icons"
										icon={data.icon}
										width="20"
										height="20"
									/>
									{data.content}
								</span>
							</a>
						</li>
					))
				}
				<li>
					<button
						class="theme-toggle"
						id="themeToggle"
						type="button"
						onclick="window.__toggleTheme()"
						aria-label="Theme wechseln"
					>
						dark
					</button>
				</li>
			</ul>
		</nav>
	</div>
</header>
